{
  "name": "@ja-to-en/background",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/service-worker.js",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "build": "tsup src/index.ts --out-dir dist --format esm --sourcemap && mv dist/index.js dist/background.js && node ./scripts/assemble-extension.mjs",
    "dev": "tsup src/index.ts --out-dir dist --format esm --sourcemap --watch",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "dependencies": {
    "@ja-to-en/domain": "workspace:*",
    "@ja-to-en/infra-cache": "workspace:*",
    "@ja-to-en/infra-lmstudio": "workspace:*",
    "@ja-to-en/ui-content": "workspace:*",
    "@ja-to-en/ui-popup": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
