{
  "manifest_version": 3,
  "name": "ENâ‡„JA Translator",
  "version": "0.2.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+T"
      }
    },
    "translate-page": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.css",
        "icons/*.svg",
        "e2e-settings.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
